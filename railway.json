{
  "$schema": "https://docs.railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "include": ["backend/"], // Explicitly only include the backend folder
    "exclude": [ // Explicitly exclude known frontend/root-level files
      "public/",
      "src/",
      "node_modules/",
      "package.json",
      "package-lock.json",
      ".gitignore",
      "README.md"
      // Add any other root-level files that are part of your frontend
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/",
    "restartPolicy": {
      "maxRetries": 3,
      "interval": 10
    }
  },
  "lifecycle": {
    "build": "pip install -r backend/requirements.txt", 
    "start": "python backend/main.py"                  
  },
  "projectId": "87b97f7b-28da-4e96-a99d-5c5d01e8ec8a", 
  "services": [
    {
      "name": "backend",
      "path": "backend", 
      "type": "backend"
    }
  ]
}
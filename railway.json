{
  "$schema": "https://docs.railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
    // No "include" or "exclude" here for now, as "path" in services should handle it.
    // If issues persist, we might add "exclude" patterns here.
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/",
    "restartPolicy": {
      "maxRetries": 3,
      "interval": 10
    }
  },
  "lifecycle": {
    // Ensure these commands ONLY reference files within the 'backend' directory
    "build": "cd backend && pip install -r requirements.txt",
    "start": "cd backend && python main.py"
  },
  "projectId": "87b97f7b-28da-4e96-a99d-5c5d01e8ec8a", 
  "services": [
    {
      "name": "backend",
      "path": "backend", // This tells Railway to build from the 'backend' folder
      "type": "backend"
    }
  ]
}